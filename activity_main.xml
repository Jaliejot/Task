<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:aandroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.reza.application1.MainActivity">


    <EditText
        android:id="@+id/Angka2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/Angka1"
        android:layout_toLeftOf="@+id/Hasilnya"
        android:layout_toStartOf="@+id/Hasilnya"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <Button
        android:id="@+id/Delete"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/bersihkan"
        android:onClick="Delete"
        android:elevation="0dp"
        android:layout_alignBaseline="@+id/Floating"
        android:layout_alignBottom="@+id/Floating"
        android:layout_toRightOf="@+id/Hasilnya"
        android:layout_toEndOf="@+id/Hasilnya" />

    <Button
        android:id="@+id/Floating"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/hasil"
        android:onClick="Hasilna"

        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/TextView2"
        android:layout_alignStart="@+id/TextView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView3"
        android:text="@string/pengeluaran"
        android:layout_below="@+id/Angka1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pemasukan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Angka1"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_below="@+id/TextView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Hasilnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Samadengan"
        android:layout_alignBaseline="@+id/TextView1"
        android:layout_alignBottom="@+id/TextView1"
        android:layout_alignRight="@+id/Angka1"
        android:layout_alignEnd="@+id/Angka1" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rata"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/Floating"
        android:layout_alignRight="@+id/Floating"
        android:layout_alignEnd="@+id/Floating" />
</RelativeLayout>
